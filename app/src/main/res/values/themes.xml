<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/violet</item>
    </style>

    <style name="Theme.NewApp" parent="Base.Theme.NewApp" />
    <style name="commmonButton" parent="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary">
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_width">72dp</item>
        <item name="cornerRadius">36dp</item>
        <item name="android:textSize">28sp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:layout_margin">12dp</item>
    </style>
    <style name="digitButton" parent="commmonButton">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="operatorButton" parent="commmonButton">
        <item name="android:textColor">@color/btnBackground2</item>
    </style>
</resources>

